<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="taskThemeTextInputLayout">
        <!-- Цвет обводки при нормальном состоянии -->
        <item name="boxStrokeColor">@color/blue</item>
        <!-- Цвет текста заголовка при фокусе -->
        <item name="hintTextColor">@color/blue</item>
        <!-- Толщина обводки при нормальном состоянии -->
        <item name="boxStrokeWidth">2dp</item>
        <!-- Толщина обводки при фокусе -->
        <item name="boxStrokeWidthFocused">3dp</item>
        <!-- Тип формы: OutlinedBox для выделенной обводки -->
        <item name="boxBackgroundMode">outline</item>
        <!-- Цвет курсора -->
        <item name="cursorColor">@color/black</item>
    </style>

    <style name="taskThemeTextInputEditText">
        <item name="android:paddingStart">10dp</item>
        <item name="android:background">null</item>
        <item name="android:textColorHighlight">#C4E3ED</item>
    </style>

</resources>